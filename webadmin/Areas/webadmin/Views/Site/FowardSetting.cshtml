@using Oaww.ViewModel;
@using Oaww.Utility;
@model SiteLayoutModel
@{
    Layout = "~/Areas/webadmin/Views/Shared/_Layout.cshtml";
}
<!--page bar start-->
<div class="page-bar all_width">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Home")">Home</a>
            <i class="fa fa-circle"></i>
            <span href="#">版面設定</span>
            <i class="fa fa-circle"></i>
            <span href="#">網站版面資訊設定</span>
        </li>
    </ul>
</div>
<!--page bar end-->
<!--message start-->
<div class="title_01">網站版面資訊設定</div>

<div class="portlet light bordered">

    <div class="table-toolbar">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <p class="class_title">管理項目</p>
            <div class="display_inline">
                <select class="form-control_1" id="sel_unit">
                    <option value="1">網站版面</option>
                    <option value="2" selected="selected">轉寄好友</option>
                    <option value="3">友善列印</option>
                    <option value="4">無法顯示頁面</option>
                    
                </select>
            </div>
        </div>
    </div>

    <form class="form-horizontal form-bordered" method="Post" id="editform" action='@Url.Action("SaveFowardSiteLayout")' enctype="multipart/form-data">
        @Html.HiddenFor(Model => Model.ID)
        @Html.HiddenFor(Model => Model.FowardImgNameOri)
        @Html.HiddenFor(Model => Model.FowardImgShowName)
        @Html.HiddenFor(Model => Model.SType)
        <div class="portlet light form-fit bordered">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body" id="form-body2">
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 search_item">風格圖片</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white">
                                <div class="col-md-12">
                                    <div id="div_oldfowardfile" style="display:none">
                                        <a href="@(Model.FowardImageUrl.IsNullOrEmpty()?"":Url.Content(Model.FowardImageUrl))" target="preview">@Model.FowardImgShowName</a>
                                        <label style="color:blue;margin-left:10px;cursor:pointer" id="delfowardimage">刪除</label>
                                    </div>
                                    <div style="display:inline">
                                        <label for="exampleInputFile" class="control-label display_inline">圖片上傳</label>
                                        <input id="file_fowardimage" type="file" class="display_inline" name="FirstpageImageFile" accept="image/*" />
                                        <div class="required">建議尺寸 740*185 px，限jpg、gif、png格式</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-2 col-xs-12 search_item">網站資訊</div>
                            <div class="col-md-10 col-sm-10 col-xs-12 bg-white mobile_white">
                                <textarea cols="80" id="FowardHtmlContent" rows="20">@HttpUtility.HtmlDecode(Model.FowardHtmlContent)</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center search_padding">
            <button type="submit" class="btn blue" id="btn_submit">確認送出</button>
        </div>
    </form>

</div>
@section scripts {
    <script src="@Url.Content("~/Scripts/components-date-time-pickers.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
    <script src="@Url.Content("~/Scripts/custom.js")"></script>
    <script src="~/Scripts/_html.js"></script>
    <script>
        $(function () {

           if ('@Model.ID'>0 && '@Model.FowardImgNameOri'!='') {
               $('#div_oldfowardfile').show();
            }
           $('#delfowardimage').click(function () {
               $('#div_oldfowardfile').hide();
               $('#FowardImgNameOri').val('');
               $('#FowardImgShowName').val('');
           });
           $("#sel_unit").change(function () {
                if ($("#sel_unit").val() == "1") {
                    CreatePost('@Url.Action("SiteLayout")', { stype: $("#SType").val()});
                }else if ($("#sel_unit").val() == "3") {
                    CreatePost('@Url.Action("PrintSetting")', { stype: $("#SType").val() });
                }else if ($("#sel_unit").val() == "4") {
                    CreatePost('@Url.Action("Page404Setting")', { stype: $("#SType").val() });
                }

            });
           var ckedit = CKEDITOR.replace('FowardHtmlContent', {
                height: 300,
                filebrowserImageUploadUrl: '@Url.Action("Upload")?command=QuickUpload&type=Images'
           });

            CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
            CKEDITOR.config.shiftEnterMode = CKEDITOR.ENTER_P;
            CKEDITOR.on('instanceReady', function (ev) {
                ev.editor.dataProcessor.writer.setRules('p',
                    {
                        indent: false,
                        breakBeforeOpen: false,
                        breakAfterOpen: false,
                        breakBeforeClose: false,
                        breakAfterClose: false
                    });
            });
           $('#editform').submit(function (event) {
               $(".required").hide();

               var file = $("#file_fowardimage");
                var _validFileExtensions = [".jpg", ".png", ".gif", ".jpeg"];
                var sFileName = file.val();
                if (sFileName.length > 0) {
                    var blnValid = false;
                    for (var j = 0; j < _validFileExtensions.length; j++) {
                        var sCurExtension = _validFileExtensions[j];
                        if (sFileName.substr(sFileName.length - sCurExtension.length, sCurExtension.length).toLowerCase() == sCurExtension.toLowerCase()) {
                            blnValid = true;
                            break;
                        }
                    }
                    if (!blnValid) {
                        alert("風格圖片只能上傳Image檔案");
                        file.outerHTML = file.outerHTML;
                        return false;
                    }
                }


                var formData = new FormData();
                var array = $('#editform').serializeArray();
               formData.append("FowardHtmlContent", _html.encode(CKEDITOR.instances.FowardHtmlContent.getData()));
                $.each(array, function () {
                    formData.append(this.name, this.value);
                });
                var images = $('#file_fowardimage').get(0).files;
                if (images.length > 0) {
                    formData.append("FowardImageFile", images[0]);
                } else {
                    formData.append("FowardImageFile", null);
                }
                $.ajax({
                    url: this.action,
                    data: formData,
                    type: 'POST',
                    cache: false,
                    headers: {
                        RequestVerificationToken: '@CommonRazorFunctions.GetAntiForgery()'
                    },
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        alert(data);
                        CreatePost('@Url.Action("FowardSetting")', { stype: $("#SType").val() });

                    }, error: function () {
                        // handle error
                    }
                });
                return false;
            });
        });
    </script>

}

