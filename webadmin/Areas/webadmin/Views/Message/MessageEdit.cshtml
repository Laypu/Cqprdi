<!--message start-->
<div class="title_01">@Model.ModelName</div>

<div class="portlet light bordered">

    <form class="form-horizontal form-bordered" method="Post" id="editform" action='@Url.Action("SaveItem")' enctype="multipart/form-data">
        <!--<div class="search_padding">
        <button type="button" class="btn blue" id="btn_seoshow">進階設定</button>
    </div>-->
        @Html.HiddenFor(Model => Model.ItemID)
        @Html.HiddenFor(Model => Model.ModelID)
        @Html.HiddenFor(Model => Model.UploadFileName)
        @Html.HiddenFor(Model => Model.UploadFilePath)
        @Html.HiddenFor(Model => Model.UploadFileSize)
        @Html.HiddenFor(Model => Model.UploadFileType)
        @Html.HiddenFor(Model => Model.ImageFileName)
        @Html.HiddenFor(Model => Model.ImageFileOrgName)
        @Html.HiddenFor(Model => Model.RelateImageName)
        @Html.HiddenFor(Model => Model.RelateImageFileOrgName)
        <div class="portlet light form-fit bordered">
            <div class="portlet-body form">
                <div class="form-horizontal form-bordered">
                    <div class="form-body" id="form-body2">
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">@Html.Require() 類別</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                @Html.DropDownList(@Html.IdFor(m => m.Group_ID).ToString(), (IEnumerable<SelectListItem>)ViewBag.grouplist, new { @class = "form_02" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">@Html.Require() 發布日期</div>
                            <div class="col-md-4 col-sm-12 col-xs-12 bg-white mobile_white">
                                <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                    @Html.EditorFor(model => model.PublicshStr, new { htmlAttributes = new { @class = "form-control checkitem", placeholder = "發佈日期" } })
                                    <span class="required" id="PublicshStr-error" style="display:none;">發佈日期 必須填寫！</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 bg-grey_1 search_item">顯示日期</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                <div class="input-group input-large" style="float:left">
                                    <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                        @Html.EditorFor(model => model.StDateStr, new { htmlAttributes = new { @class = "form-control", placeholder = "開始日期", @readonly = "readonly" } })
                                    </div>
                                    <span class="input-group-addon">to</span>
                                    <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                        @Html.EditorFor(model => model.EdDateStr, new { htmlAttributes = new { @class = "form-control", placeholder = "結束日期", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="" style="float:left; padding-left:5px;">
                                    <button type="button" class="btn blue" id="btn_clear">清空</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group hide">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">下架日期</div>
                            <div class="col-md-4 col-sm-12 col-xs-12 bg-white mobile_white">
                                <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                    @Html.EditorFor(model => model.UnPublicshStr, new { htmlAttributes = new { @class = "form-control input-small", placeholder = "下架日期", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">@Html.Require() 標題</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                <input id="Title" type="text" name="Title" class="form-control checkitem" maxlength="500" value="@Model.Title" />
                                <div class="red">限制輸入500字內</div>
                                <span class="required" id="Title-error" style="display:none;">標題 必須填寫！</span>
                            </div>
                        </div>

                        <div class="form-group bg-grey_1 @(Model.SET_MESSAGE.M_MESSAGE07 == false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 search_item">列表圖片</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white">
                                <div class="col-md-12">
                                    <div id="div_oldrelatefile" style="display:none">
                                        <a href="@(Model.RelateImagelUrl==null?"#":Url.Content(Model.RelateImagelUrl))" target="preview">@Model.RelateImageFileOrgName</a>
                                        <label style="color:blue;margin-left:10px;cursor:pointer" id="delrelateimage">刪除</label>
                                    </div>
                                    <div style="display:inline">
                                        <input id="file_relateimage" type="file" class="display_inline" name="ImageFile" accept="image/*" />
                                        <div class="red">檔案類型jpg、png、gif，建議檔案大小2MB內，尺寸400*300px內</div>
                                        <div class="red">Ps.首頁焦點活動建議尺寸480*480px內</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group @(Model.SET_MESSAGE.M_MESSAGE08 == false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">開啟格式設定</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white table_font">
                                @Html.RadioButtonFor(m => m.Link_Mode, "1") 可開啟內容頁
                                @Html.RadioButtonFor(m => m.Link_Mode, "2") 不可開啟內容頁
                            </div>
                        </div>
                        <div class="form-group @(Model.SET_MESSAGE.M_MESSAGE09 == false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">內容</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                <textarea cols="80" id="HtmlContent" rows="20">@HttpUtility.HtmlDecode(Model.HtmlContent)</textarea>
                            </div>
                        </div>
                        <div class="form-group @(Model.SET_MESSAGE.M_MESSAGE15 == false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">簡介</div>
                            <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                <textarea name="Introduction" class="form-control" id="Introduction" rows="5">@Model.Introduction</textarea>
                            </div>
                        </div>
                        <div class="form-group bg-grey_1 @(Model.SET_MESSAGE.M_MESSAGE10 == false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 search_item">圖片</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white">
                                <div class="col-md-12">
                                    <div id="div_oldfile" style="display:none"><a href="@(Model.ImageUrl == null?"":Url.Content(Model.ImageUrl.AntiXss()))" target="preview">@Html.Raw(Model.ImageFileOrgName.safeHtmlFragment())</a><label style="color:blue;margin-left:10px;cursor:pointer" id="delimage">刪除</label></div>
                                    <label for="ImageFile" class="col-md-2">圖片上傳</label>
                                    <div class="col-md-10">
                                        <input id="file_image" type="file" class="display_inline" name="ImageFile" accept="image/*" />
                                        <div class="red">檔案類型jpg、png、gif，建議檔案大小2MB內，尺寸寬度1000px內</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="col-md-2">圖片說明</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ImageFileDesc, new { htmlAttributes = new { @class = "form-control mobile_input display_inline", @maxlength = "75" } })
                                        <div class="red">限制輸入75字內</div>
                                        <span class="required" id="ImageFileDesc-error" style="display:none;">圖片說明 必須填寫！</span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="col-md-2">圖片位置</label>
                                    <div class="col-md-10">
                                        <select name="@Html.IdFor(model=>model.ImageFileLocation)" id="@Html.IdFor(model=>model.ImageFileLocation)" class="form-control w-auto"><option value="1">左</option><option value="2">中</option><option value="3">右</option></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group bg-grey_1 @(Model.SET_MESSAGE.M_MESSAGE03 ==false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 search_item">圖片上傳</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white language_set">
                                <div class="display_inline margin_bottom">
                                    <button type="button" class="btn green-meadow" id="btn_image_add">新增 <i class="fa fa-plus"></i></button>
                                    <button type="button" class="btn red" id="btn_image_del">刪除 <i class="glyphicon glyphicon-trash"></i></button>
                                </div>

                                <!--table start-->
                                <table class="table table-bordered nomarginbottom" id="tbl_image" border="0" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th width="60" class="text-center" filed-type="delcheckbox">刪除</th>
                                            <th class="text-center">圖片上傳</th>
                                            <th class="text-center">圖片預覽</th>
                                            <th class="text-center">圖片說明</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var fileDownloadFile in Model.messageImages)
                                        {
                                            <tr class="tr_image">
                                                <td class="text-center">
                                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                        <input type="checkbox" class="checkboxes image">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <div id="div_olduploadimgge">
                                                        <input type="hidden" id="UploadFileName" value=" @fileDownloadFile.UploadFileName" />
                                                        <input type="hidden" id="UploadFilePath" value=" @fileDownloadFile.UploadFilePath" />

                                                    </div>
                                                    <input type="file" id="uploadfile" class="display_inline" accept="image/*">
                                                    <span class="required ">建議檔案大小5MB內</span>
                                                </td>
                                                <td class="text-center">
                                                    <img src="@Url.Action("ImageDownLoad",new {FID=fileDownloadFile.FID })" style="height:100px" target="preview">
                                                </td>
                                                <td class="text-center">
                                                    <input type="text" value="@fileDownloadFile.UploadFileDesc" id="UploadFileDesc" maxlength="75" class="form-control">
                                                    <span class="required" id="UploadFileDesc-error" style="display:none;">檔案說明 必須填寫！</span>
                                                    <div class="red">限制輸入75字內</div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!--table end-->
                            </div>
                        </div>

                        <div class="form-group @(Model.SET_MESSAGE.M_MESSAGE11 ==false ?"hide":"")" " >
                            <div class="col-md-2 col-sm-12 col-xs-12 search_item">相關連結</div>
                            <div class="col-md-10  col-sm-12 col-xs-12 bg-white mobile_white">
                                <div class="col-md-12">
                                    <label class="col-md-2">相關連結</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LinkUrl, new { htmlAttributes = new { @class = "form-control", @maxlength = "1000" } })
                                        <div class="red">限制輸入1000字內</div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="col-md-2">連結說明</label>
                                    <div class="col-md-10 margin_bottom">
                                        @Html.EditorFor(model => model.LinkUrlDesc, new { htmlAttributes = new { @class = "form-control", @maxlength = "200" } })
                                        <div class="red">限制輸入200字內</div>
                                        <span class="required" id="LinkUrlDesc-error" style="display:none;">連結說明 必須填寫！</span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="col-md-2">開啟方式</label>
                                    <div class="col-md-10 margin_bottom">
                                        @Html.RadioButtonFor(model => model.OpenMode, 1, new { style = "margin-left :0px", @checked = "checked" }) 原視窗<br />
                                        @Html.RadioButtonFor(model => model.OpenMode, 2, new { style = "" }) 新視窗<br />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group bg-grey_1 @(Model.SET_MESSAGE.M_MESSAGE04 ?"hide":"")">
                            <div class="col-md-2 col-sm-12 search_item">檔案上傳</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white language_set">
                                <div class="col-md-12">
                                    <div id="div_olduploadfile" style="display:none"><a href="@Url.Action("FileDownLoad2")?modelid=@Model.ModelID&&itemid=@Model.ItemID" target="preview">@Model.UploadFileName</a><label style="color:blue;margin-left:10px;cursor:pointer" id="delupfile">刪除</label></div>

                                    <div id="div_nofile" style="display:inline">
                                        <label for="UploadFile" class="col-md-2">檔案上傳</label>
                                        <div class="col-md-10">
                                            <input type="file" id="SingleUploadfile" class="display_inline" name="UploadFile">
                                            <span class="required">建議檔案大小5MB內</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label class="col-md-2">檔案說明</label>
                                    <div class="col-md-10 margin_bottom">
                                        @Html.EditorFor(model => model.UploadFileDesc, new { htmlAttributes = new { @class = "form-control mobile_input display_inline", @id = "SingleUploadFileDesc" } })
                                        <span class="required" id="SingleUploadFileDesc-error" style="display:none;">檔案說明 必須填寫！</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group bg-grey_1 @(Model.SET_MESSAGE.M_MESSAGE04 ==false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 search_item">檔案上傳</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white language_set">
                                <div class="display_inline margin_bottom">
                                    <button type="button" class="btn green-meadow" id="btn_file_add">新增 <i class="fa fa-plus"></i></button>
                                    <button type="button" class="btn red" id="btn_file_del">刪除 <i class="glyphicon glyphicon-trash"></i></button>
                                </div>

                                <!--table start-->
                                <table class="table table-bordered nomarginbottom" id="tbl_file" border="0" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th width="60" class="text-center" filed-type="delcheckbox">刪除</th>
                                            <th class="text-center">檔案上傳</th>
                                            <th class="text-center">標題</th>
                                            <th class="text-center">檔案說明</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var fileDownloadFile in Model.fileDownloadFiles)
                                        {
                                            <tr class="tr_file">
                                                <td class="text-center">
                                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                        <input type="checkbox" class="checkboxes chksel">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <div id="div_olduploadfile">
                                                        <input type="hidden" id="UploadFileName" value=" @fileDownloadFile.UploadFileName" />
                                                        <input type="hidden" id="UploadFilePath" value=" @fileDownloadFile.UploadFilePath" />
                                                        <input type="hidden" id="UploadFileSize" value=" @fileDownloadFile.UploadFileSize" />
                                                        <input type="hidden" id="UploadFileType" value=" @fileDownloadFile.UploadFileType" />
                                                        <a href="@Url.Action("FileDownLoad",new {FID=fileDownloadFile.FID })" target="preview">
                                                            @fileDownloadFile.UploadFileName
                                                        </a>

                                                    </div>
                                                    <input type="file" id="uploadfile" class="display_inline" name="UploadFile">
                                                    <span class="required ">建議檔案大小5MB內</span>
                                                </td>
                                                <td class="text-left">
                                                    <input type="text" value="@fileDownloadFile.Title" id="Title" maxlength="75" class="form-control">
                                                    <span class="required" id="Title-error" style="display:none;">標題說明 必須填寫！</span>
                                                    <div class="required">限制輸入75字內</div>
                                                </td>
                                                <td class="text-center">
                                                    <input type="text" value="@fileDownloadFile.UploadFileDesc" id="UploadFileDesc" maxlength="75" class="form-control">
                                                    <span class="required" id="UploadFileDesc-error" style="display:none;">檔案說明 必須填寫！</span>
                                                    <div class="red">限制輸入75字內</div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!--table end-->
                            </div>
                        </div>
                        <div class="form-group bg-grey_1 @(Model.SET_MESSAGE.M_MESSAGE19 ==false ?"hide":"")">
                            <div class="col-md-2 col-sm-12 search_item">活動區間</div>
                            <div class="col-md-10 col-sm-12 bg-white mobile_white language_set">
                                <div class="display_inline margin_bottom">
                                    <button type="button" class="btn green-meadow" id="btn_active_add">新增 <i class="fa fa-plus"></i></button>
                                    <button type="button" class="btn red" id="btn_active_del">刪除 <i class="glyphicon glyphicon-trash"></i></button>
                                </div>
                                <table class="table table-bordered nomarginbottom" id="tbl_active" border="0" cellspacing="0" cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th width="60" class="text-center" filed-type="delcheckbox">刪除</th>
                                            <th class="text-center">活動區間</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var MessActDate in Model.messageDateRange)
                                        {
                                            <tr class="tr_active">
                                                <td class="text-center">
                                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                        <input type="checkbox" class="checkboxes active">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">
                                                        <div class="input-group input-large" style="float:left">
                                                            <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                                                <input class="form-control text-box single-line sdate" id="StDate" placeholder="開始日期" readonly="readonly" type="text" value="@MessActDate.StartDate">
                                                            </div>
                                                            <span class="input-group-addon">to</span>
                                                            <div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">
                                                                <input class="form-control text-box single-line edate" id="EdDate"  placeholder="結束日期" readonly="readonly" type="text" value="@MessActDate.EndDate">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                </table>
                            </div>
                        </div>
                        @if (Model.SET_MESSAGE.M_MESSAGE18.IsNullOrEmpty() == false)
                        {
                            @Html.Partial(Model.SET_MESSAGE.M_MESSAGE18, Model)
                        }

                        @if (Model.ItemID >= 0 && Model.SET_BASE.M_Base02)
                        {
                            <div class="form-group">
                                <div class="col-md-2 col-sm-12 col-xs-12 search_item">審核狀態</div>
                                <div class="col-md-4 col-sm-12 col-xs-12 mobile_white table_font">
                                    @Model.VerifyStatus
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 col-sm-12 col-xs-12 search_item">新增</div>
                                <div class="col-md-10 col-sm-12 mobile_white language_set">
                                    <div class="col-md-12">
                                        <label for="exampleInputFile" class="col-md-2">人員</label>
                                        <div class="col-md-10 label_font">@Model.CreateUser</div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-md-2">時間</label>
                                        <div class="col-md-10 label_font">@Model.CreateDatetime</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 col-sm-12 col-xs-12 search_item">最後修改</div>
                                <div class="col-md-10 col-sm-12 mobile_white language_set">
                                    <div class="col-md-12">
                                        <label for="exampleInputFile" class="col-md-2">人員</label>
                                        <div class="col-md-10 label_font">@Model.UpdateUser</div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-md-2">時間</label>
                                        <div class="col-md-10 label_font">@Model.UpdateDatetime</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 col-sm-12 col-xs-12 search_item">最後審核</div>
                                <div class="col-md-10 col-sm-12  mobile_white language_set">
                                    <div class="col-md-12">
                                        <label for="exampleInputFile" class="col-md-2">人員</label>
                                        <div class="col-md-10 label_font">@Model.VerifyUser</div>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="col-md-2">時間</label>
                                        <div class="col-md-10 label_font">@Model.VerifyDateTime</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center search_padding" id="div_buttons">

            <button type="submit" class="btn blue" id="btn_submit">確認送出</button>

            <button type="button" class="btn blue" id="btn_return">返回列表</button>
            <button type="button" class="btn grey-mint " id="preview" onclick="callpreview()">預覽</button>
        </div>
    </form>

</div>
@section scripts {
    <script src="@Url.Content("~/Scripts/components-date-time-pickers.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/Scripts/custom.js")"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
    <script src="@Url.Content("~/Scripts/bootbox.min.js")"></script>
 
    <script src="~/Scripts/_html.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <script>
        $(function () {
            var fileupload = '@Model.UploadFileName';
            var selactiveitem = '@Model.ActiveItemID';

            $('#btn_clear').click(function () {
                $('#StDateStr').val('');
                $('#EdDateStr').val('');
            });
            $('#ImageFileLocation').val('@Model.ImageFileLocation');

            var fileupload = '@Model.UploadFileName'
            if (fileupload!==""){
                $("#div_olduploadfile").show();
            }
            $("#btn_seoshow").click(function () {
                $("#div_seo").toggle(500);
            });
            $("#btn_return").click(function () { CreatePost('@Url.Action("ModelItem")', { mainid: '@Model.ModelID'});});
            if ('@Model.ItemID'>0 && '@Model.ImageFileName'!='') {
                $('#div_oldfile').show();
            }
            if ('@Model.ItemID'>0 && '@Model.RelateImageName'!='') {
                  $('#div_oldrelatefile').show();
            }
            $('#delimage').click(function () {
                $('#div_oldfile').hide();
                $('#ImageFileName').val('');
            });
            $('#delupfile').click(function () {
                $('#div_olduploadfile').hide();
                $('#UploadFileName').val('');
                $('#UploadFilePath').val('');
                $('#UploadFileSize').val('0');
                $('#UploadFileType').val('');
            });

            $('#delrelateimage').click(function () {
                $('#div_oldrelatefile').hide();
                $('#RelateImageName').val('');
            });



            var ckedit = CKEDITOR.replace('HtmlContent', {               
                height: 300,
               filebrowserImageUploadUrl: '@Url.Action("Upload")?command=QuickUpload&type=Images',
               filebrowserUploadUrl: '@Url.Action("UploadFile")?command=QuickUpload&type=Files',
            });
            CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
            CKEDITOR.config.shiftEnterMode = CKEDITOR.ENTER_P;
            CKEDITOR.on('instanceReady', function (ev) {
                ev.editor.dataProcessor.writer.setRules('p',
                    {
                        indent: false,
                        breakBeforeOpen: false,
                        breakAfterOpen: false,
                        breakBeforeClose: false,
                        breakAfterClose: false
                    });
            });
             var itemlen = $('.tr_active').length;
            $("#btn_active_add").click(function (evt) {
                evt.preventDefault();
                var html = '<tr class="tr_active">';
                html += '<td class="text-center">'
                 html += '<label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">'
                 html += '<input type="checkbox" class="checkboxes active">'
                   html += '<span></span>'
                   html += '</label>'
                      html += '</td>'
                    html += '<td class="text-center">'
                    html += ' <div class="col-md-10 col-sm-12 col-xs-12 bg-white mobile_white">'
                    html += '<div class="input-group input-large" style="float:left">'
                html += '<div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">'   
                     html += `<input class="form-control text-box single-line sdate" id="StDate"  placeholder="開始日期" readonly="readonly" type="text" value="">`                                
                        html += ' </div>'
                        html += '<span class="input-group-addon">to</span>'
                        html += '<div class="date-picker input-daterange" data-date-format="yyyy/mm/dd">'
                        html += `<input class="form-control text-box single-line edate" id="EdDate"  placeholder="結束日期" readonly="readonly" type="text" value="">`         
                          html += '</div>'
                         html += '</div>'
                               html += '</div>'
                             html += '</td>'
                html += '</tr>';
                  if ($('#tbl_active>tbody tr').length == 0) {
                    $('#tbl_active>tbody').append(html);
                }
                else {
                    $('#tbl_active>tbody tr:last').after(html);
                }
                bindDatePick()
                itemlen++
            })
             $('#btn_active_del').click(function () {
                $('.active:checked').parents('tr').remove();
             })
    //重新綁定DatePicker
    function bindDatePick() {
                  $('.sdate').datepicker({
        format: "yyyy/mm/dd",
        autoclose: true,
        language: 'zh-TW'
        });
    $('.edate').datepicker({
        format: "yyyy/mm/dd",
        autoclose: true,
        language: 'zh-TW'
    });
            }
            $('#btn_file_add').click(function (evt) {

                evt.preventDefault();

                var html = '<tr class="tr_file">';
                html += '   <td class="text-center">';
                html += '   <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">';
                html += '       <input type="checkbox" class="checkboxes chksel">';
                html += '       <span></span>';
                html += '   </label>';
                html += '   </td>';
                html += '   <td class="text-center">';
                html += '       <input type="file" id="uploadfile" class="display_inline" name="UploadFile">';
                html += '       <span class="required float_left">建議檔案大小5MB內</span>';
                html += '   </td>';
                html += '   <td class="text-left"> ';
                html += '       <input type="text" name="Title" id="Title" maxlength="75" class="form-control" >';
                html += '       <span class="required" id="Title-error" style="display:none;">標題說明 必須填寫！</span>';
                html += '       <div class="required">限制輸入75字內</div>';
                html += '   </td>';
                html += '   <td class="text-center">';
                html += '       <input type="text" name="UploadFileDesc" id="UploadFileDesc" maxlength="75" class="form-control">';
                html += '       <span class="required" id="UploadFileDesc-error" style="display:none;">檔案說明 必須填寫！</span>';
                html += '       <div class="red">限制輸入75字內</div>'
                html += '   </td>';
                html += '</tr>';

                if ($('#tbl_file>tbody tr').length == 0) {
                    $('#tbl_file>tbody').append(html);
                }
                else {
                    $('#tbl_file>tbody tr:last').after(html);
                }

            })

             $('#btn_file_del').click(function () {
                $('.chksel:checked').parents('tr').remove();
             })

            $('#btn_image_add').click(function (evt) {

                evt.preventDefault();

                var html = '<tr class="tr_image">';
                html += '   <td class="text-center">';
                html += '   <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">';
                html += '       <input type="checkbox" class="checkboxes image">';
                html += '       <span></span>';
                html += '   </label>';
                html += '   </td>';
                html += '   <td class="text-center">';
                html += '       <input type="file" id="uploadfile" class="display_inline" name="UploadFile" accept="image/*">';
                html += '       <span class="required float_left">建議檔案大小5MB內</span>';
                html += '   </td>';
                html += '   <td class="text-center">';
                html += '   </td>';
                html += '   <td class="text-center">';
                html += '       <input type="text" name="UploadFileDesc" id="UploadFileDesc" maxlength="75" class="form-control">';
                html += '       <span class="required" id="UploadFileDesc-error" style="display:none;">檔案說明 必須填寫！</span>';
                html += '       <div class="red">限制輸入75字內</div>'
                html += '   </td>';
                html += '</tr>';

                if ($('#tbl_image>tbody tr').length == 0) {
                    $('#tbl_image>tbody').append(html);
                }
                else {
                    $('#tbl_image>tbody tr:last').after(html);
                }

            })

             $('#btn_image_del').click(function () {
                $('.image:checked').parents('tr').remove();
             })

            $('#EdDateStr').change(function () {
                var new_date = moment($('#EdDateStr').val(), "YYYY/MM/DD").add(1, 'days');
                $('#UnPublicshStr').val(new_date.format('YYYY/MM/DD'));

            })
            $('#editform').submit(function (event) {

               $(".required").hide();
                 var inputval = $("#form-body2 :input").filter(function () { return $(this).val() == "" && $(this).hasClass('checkitem'); });
                for (var idx = 0; idx < inputval.length; idx++) {
                    $("#" + inputval[idx].name + "-error").show();
                }
                if (inputval.length > 0) { return false; }
                var file = $("#file_image");
                var _validFileExtensions = [".jpg", ".png", ".gif", ".jpeg"];
                var sFileName = file.val();
                if (sFileName.length > 0) {
                    var blnValid = false;
                    for (var j = 0; j < _validFileExtensions.length; j++) {
                        var sCurExtension = _validFileExtensions[j];
                        if (sFileName.substr(sFileName.length - sCurExtension.length, sCurExtension.length).toLowerCase() == sCurExtension.toLowerCase()) {
                            blnValid = true;
                            break;
                        }
                    }
                    if (!blnValid) {
                        alert("只能上傳Image檔案");
                        file.outerHTML = file.outerHTML;
                        return false;
                    }
                }

                var rfile = $("#file_relateimage");
                sFileName = rfile.val();
                if (sFileName.length > 0) {
                    var blnValid = false;
                    for (var j = 0; j < _validFileExtensions.length; j++) {
                        var sCurExtension = _validFileExtensions[j];
                        if (sFileName.substr(sFileName.length - sCurExtension.length, sCurExtension.length).toLowerCase() == sCurExtension.toLowerCase()) {
                            blnValid = true;
                            break;
                        }
                    }
                    if (!blnValid) {
                        alert("相關圖片只能上傳Image檔案");
                        file.outerHTML = file.outerHTML;
                        return false;
                    }
                }

               var formData = new FormData();
               var array = $('#editform').serializeArray();
               $.each(array, function () {
                   formData.append(this.name, this.value);
               });
               formData.append("HtmlContent", _html.encode(CKEDITOR.instances.HtmlContent.getData()));
                formData.append("Title", _html.encode($('#Title').val()));

                
                //在這裡注入資料
                if (typeof InjectData === 'function') {
                    formData= InjectData(formData);
                }
               
                var iscon = true;
                if ($('#LinkUrl').val() != "" && $('#LinkUrlDesc').val() == "") {
                    $('#LinkUrlDesc-error').show();
                    iscon = false;
                }
                var images = $('#file_image').get(0).files;
                if (images.length > 0) {
                    formData.append("ImageFile", images[0]);
                    if ($('#ImageFileDesc').val() == "") {
                        $('#ImageFileDesc-error').show();
                        iscon = false;
                    }
                } else {
                    formData.append("ImageFile", null);
                    if ($('#ImageFileName').val() != "") {
                        if ($('#ImageFileDesc').val() == "") {
                            $('#ImageFileDesc-error').show();
                            iscon = false;
                        }
                    }
                }
               //
                var rimages = $('#file_relateimage').get(0).files;
                if (rimages.length > 0) {
                    formData.append("RelateImageFile", rimages[0]);
                } else {
                    formData.append("RelateImageFile", null);
                }
            var uploadfile = $('#SingleUploadfile').get(0).files;
                if (uploadfile.length > 0) {
                    formData.append("UploadFile", uploadfile[0]);
                    if ($('#SingleUploadFileDesc').val() == "") {
                        $('#SingleUploadFileDesc-error').show();
                        iscon = false;
                    }
                } else {
                    formData.append("UploadFile", null);
                    if ($('#UploadFileName').val() != "") {
                        if ($('#SingleUploadFileDesc').val() == "") {
                            $('#SingleUploadFileDesc-error').show();
                            iscon = false;
                        }
                    }
                }

              if (DateBetweenVaild('StDateStr','EdDateStr') == false) {
                    alert('顯示日期_開始日期必須小於結束日期！');
                    return false;
              }

               if ($('#fileDownloadItem_LinkUrl').val() != "" && $('#fileDownloadItem_LinkUrlDesc').val() == '') {
                   iscon = false;
                   $('#LinkUrlDesc-error').show();
               }

            var i = 0;
            $('.tr_file').each(function () {
                   var uploadfile = $(this).find('#uploadfile').get(0).files;
                   if (uploadfile.length > 0) {
                       formData.append("fileDownloadFiles[" + i + "].UploadFile", uploadfile[0]);
                       formData.append("fileDownloadFiles[" + i + "].UploadFileDesc", $(this).find('#UploadFileDesc').val());
                       formData.append("fileDownloadFiles[" + i + "].Title", $(this).find('#Title').val());
                       if ($(this).find('#UploadFileDesc').val() == "") {
                           $(this).find('#UploadFileDesc-error').show();
                           iscon = false;
                       }
                       if ($(this).find('#Title').val() == "") {
                           $(this).find('#Title-error').show();
                           iscon = false;
                       }
                   } else {
                       formData.append("fileDownloadFiles[" + i + "].UploadFile", null);
                       formData.append("fileDownloadFiles[" + i + "].UploadFileName", $(this).find('#UploadFileName').val());
                       formData.append("fileDownloadFiles[" + i + "].UploadFilePath", $(this).find('#UploadFilePath').val());
                       formData.append("fileDownloadFiles[" + i + "].UploadFileDesc", $(this).find('#UploadFileDesc').val());
                       formData.append("fileDownloadFiles[" + i + "].UploadFileSize", $(this).find('#UploadFileSize').val());
                       formData.append("fileDownloadFiles[" + i + "].UploadFileType", $(this).find('#UploadFileType').val());
                       formData.append("fileDownloadFiles[" + i + "].Title", $(this).find('#Title').val());
                       if ($(this).find('#UploadFileName').val() != "") {
                           if ($(this).find('#UploadFileDesc').val() == "") {
                               $(this).find('#UploadFileDesc-error').show();
                               iscon = false;
                           }
                           if ($(this).find('#Title').val() == "") {
                               $(this).find('#Title-error').show();
                               iscon = false;
                           }
                       }
                   }

                   i++;
            })
                var d = 0;
                $('.tr_active').each(function () {
                    var stdate = $(this).find('#StDate').val();
                    var eddate = $(this).find('#EdDate').val();
                    if (DateBetweenVaild('StDate','EdDate') == false) {
                    alert('顯示日期_開始日期必須小於結束日期！');
                    return false;
                   }
                    formData.append("messageDateRange[" + d + "].StartDate", stdate);
                    formData.append("messageDateRange[" + d + "].EndDate", eddate);
                    d++;
                })
            var i = 0;
            $('.tr_image').each(function () {
                   var uploadfile = $(this).find('#uploadfile').get(0).files;
                   if (uploadfile.length > 0) {
                       formData.append("messageImages[" + i + "].UploadFile", uploadfile[0]);
                       formData.append("messageImages[" + i + "].UploadFileDesc", $(this).find('#UploadFileDesc').val());
                       if ($(this).find('#UploadFileDesc').val() == "") {
                           $(this).find('#UploadFileDesc-error').show();
                           iscon = false;
                       }
                   } else {
                       formData.append("messageImages[" + i + "].UploadFile", null);
                       formData.append("messageImages[" + i + "].UploadFileName", $(this).find('#UploadFileName').val());
                       formData.append("messageImages[" + i + "].UploadFilePath", $(this).find('#UploadFilePath').val());
                       formData.append("messageImages[" + i + "].UploadFileDesc", $(this).find('#UploadFileDesc').val());
                       if ($(this).find('#UploadFileName').val() != "") {
                           if ($(this).find('#UploadFileDesc').val() == "") {
                               $(this).find('#UploadFileDesc-error').show();
                               iscon = false;
                           }
                       }
                   }

                   i++;
            })

                if (iscon == false) { return false;}
                $.ajax({
                    url: this.action,
                    data: formData,
                    type: 'POST',
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        alert(data);
                        if (data == '新增成功' || data == '修改成功') {
                            CreatePost('@Url.Action("ModelItem")', { mainid: '@Model.ModelID'});
                        }


                    }, error: function () {
                        // handle error
                    }
                });
                return false;
            });

        });

        function callpreview() {
            var htmlcontent = CKEDITOR.instances.HtmlContent.getData();
            if (htmlcontent == "") { htmlcontent = "</br>" }
            bootbox.alert({
                title: "預覽",
                message: htmlcontent,
                size: 'large'
            });
        }
    </script>

}

