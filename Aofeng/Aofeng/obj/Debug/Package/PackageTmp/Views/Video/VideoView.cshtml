@model VideoItem
@{
    bool isPrint = (bool)ViewBag.print;

    if (isPrint)
    {
        Layout = "~/Views/Shared/_Print.cshtml";
    }
}
<div class="title_bar">
    <h1>@Model.Title</h1>
</div>
<div class="mv_16by9">
    <iframe class="embed-responsive-item" sandbox="allow-scripts allow-same-origin"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            src="@Model.VideoLink" frameborder="0" allowfullscreen title="@Model.Title"></iframe>
</div>
<hr>
<div class="edit">
    <h2>@("影片介紹".GetLang())</h2>
    @Html.Raw(HttpUtility.HtmlDecode(Model.HtmlContent))
</div>
<div class="pager_bar ">
    <div class="left"><a href="javascript:history.back()" class="con">@("回上一頁".GetLang())</a></div>
</div>