@using Oaww.HtmlHelp;
@using Oaww.Entity;
@{
    Layout = null;
    List<Menu> UpMenu = (List<Menu>)ViewBag.UpMenu;
    List<Menu> DownMenu = (List<Menu>)ViewBag.DownMenu;

    SiteLayout siteLayout = CommonRazorFunctions.GetSiteLayout(Session["LangID"].ToString());

    ADKanban ADKanban = (ADKanban)ViewBag.ADKanban;
    if (ADKanban.ID == 0)
    {
        ADKanban = new ADKanban();
    }
    
}


    <div id="footer">
        <div class="inner-width">
            <div class="left">
                <div class="info">
                    <h4>@ADKanban.AD_Name</h4>
                    <p>@ADKanban.ADDesc</p>
                    <div class="more_bar">
                        @if (ADKanban.Link_Mode == "1")
                        {
                            <a href="@ADKanban.Link_Href" target="_self">...more</a>
                        }
                        else
                        {
                            <a href="@ADKanban.Link_Href" target="_blank">...more</a>
                        }
                    </div>
                </div>
            </div>
            <div class="main">
                <div class="foot_menu">
                    @foreach (var menu in DownMenu.OrderBy(t => t.Sort))
                    {
                        @Html.aira_HyperLink_Menu(menu, null)
                    }
                </div>
                <div class="follow">
                    @foreach (var menu in UpMenu.OrderBy(t => t.Sort))
                    {
                        @Html.aira_Icon_HyperLink_Menu(menu, menu.Icon, null)
                    }
                </div>
            </div>
            <div class="right">
                <div class="add_list">
                    @Html.Raw(HttpUtility.HtmlDecode(siteLayout.HtmlContent))
                </div>
            </div>
            <div class="clear"></div>         
        </div>
        <div class="copyright">
            Copyright &copy; 2020 Aofeng Hi-Tech Company Limited  All rights reserved.
        </div>
    </div>


