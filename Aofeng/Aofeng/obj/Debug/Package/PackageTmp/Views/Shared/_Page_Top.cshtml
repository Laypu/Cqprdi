
@{
    Layout = null;

    UnitSetting unitSetting = (UnitSetting)ViewBag.UnitSetting;
}
    <div class="page_top_right">
        @if (unitSetting.IsForward)
        {
            <a href="@Url.Action("Forward","Common",new {@Url = HttpUtility.UrlEncode(ViewBag.Url),@Name=HttpUtility.UrlEncode(ViewBag.modelName) })" title="@("MAIL分享".GetLang())" target="_blank"><img src="@Url.Content("~/Content/img/icon_mail.png")" alt="轉寄好友"></a>
        }
        @if (unitSetting.IsPrint)
        {
            <a href="@ViewBag.PrintUrl" title="@("列印本頁".GetLang())" target="_blank"><img src="@Url.Content("~/Content/img/icon_print.png")" alt="友善列印"></a>

        }
        @if (unitSetting.IsShare)
        {
            <a href="javascript: void(window.open('http://www.facebook.com/share.php?u='.concat(encodeURIComponent(location.href)) ));" title="@("分享至 Facebook[另開新視窗]".GetLang())" target="_self"><img src="@Url.Content("~/Content/img/icon_facebook.png")" alt="facebook分享(另開新視窗)"></a>
            <a href="javascript: void(window.open('http://twitter.com/home/?status='.concat(encodeURIComponent(document.title)) .concat(' ') .concat(encodeURIComponent(location.href))));" title="@("分享至 twitter[另開新視窗]".GetLang())" target="_self"><img src="@Url.Content("~/Content/img/icon_twitter.png")" alt="twitter分享(另開新視窗)"></a>
            <a href="http://plurk.com/?qualifier=shares&status=[分享]@(HttpUtility.UrlEncode(Request.Url.AbsoluteUri))" target="_blank" title="@("分享至 plurk[另開新視窗]".GetLang())"><img src="@Url.Content("~/Content/img/icon_plurk.png")" alt="plurk分享(另開新視窗)"></a>
        }
    </div>