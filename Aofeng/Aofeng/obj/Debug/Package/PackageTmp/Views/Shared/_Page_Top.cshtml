
@{
    Layout = null;

    UnitSetting unitSetting = (UnitSetting)ViewBag.UnitSetting;
}

@if (unitSetting.IsForward)
{
    <a href="@Url.Action("Forward","Common",new {@Url = HttpUtility.UrlEncode(ViewBag.Url),@Name=HttpUtility.UrlEncode(ViewBag.modelName) })" title="@("MAIL分享".GetLang())" target="_blank"><i class="fa fa-envelope" aria-hidden="true"></i></a>
}
@if (unitSetting.IsPrint)
{
    <a href="@ViewBag.PrintUrl" title="@("列印本頁".GetLang())" target="_blank"><i class="fa fa-print" aria-hidden="true"></i></a>

}
@if (unitSetting.IsShare)
{
    <a href="javascript: void(window.open('http://www.facebook.com/share.php?u='.concat(encodeURIComponent(location.href)) ));" title="@("分享至 Facebook[另開新視窗]".GetLang())" target="_self"><i class="fa fa-facebook-official" aria-hidden="true"></i></a>
    <a href="javascript: void(window.open('http://twitter.com/home/?status='.concat(encodeURIComponent(document.title)) .concat(' ') .concat(encodeURIComponent(location.href))));" title="@("分享至 twitter[另開新視窗]".GetLang())" target="_self"><i class="fa fa-twitter" aria-hidden="true"></i></a>
    <a href="javascript: void(window.open('http://line.naver.jp/R/msg/text/?'.concat(encodeURIComponent(location.href)) ));" title="@("分享至 line[另開新視窗]".GetLang())" target="_self">LINE</a>
}
